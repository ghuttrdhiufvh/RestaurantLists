<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Restaurant Listing</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Restaurant Listing</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addRestaurant">Add new restaurant</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Restaurants from Restaurant Listing Database</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Restaurant Name</th>
            <th width="100">Restaurant Location</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < restaurants.length; i++) { %>
          <tr>
            <td><a href="/restaurant/<%= restaurants[i].restaurantId %>" ><%= restaurants[i].restaurantName %></a></td>
            <td><a href="/restaurant/<%= restaurants[i].restaurantId %>" ><%= restaurants[i].restaurantLocation %></a></td>
            <!--Edit link-->
            <td><a href="/editRestaurant/<%= restaurants[i].restaurantId %>">Edit</a></td>
            <!--Delete link-->
            <td><a href="/deleteRestaurant/<%= restaurants[i].restaurantId %>" onclick="return confirm('Are you sure you want to delete this restaurant from the list?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
