<!-- restaurant.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Restaurant Listing</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Restaurant Listing</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/restaurant">Add new restaurant</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Restaurant Details</h2></div>
        <br>
        <% if (restaurant) { %> <!-- Check if restaurant data exists -->
            <div>
                <p><b>Restaurant Name:</b><br> <%= restaurant.restaurantName %></p>
                <p><b>Restaurant Location:</b><br> <%= restaurant.restaurantLocation %></p>
            </div>
        <% } else { %>
            <p>No restaurant found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
